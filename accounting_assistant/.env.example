# Automated Accounting Agent Configuration
# Copy this file to .env and fill in your actual credentials

# Email Configuration (for sending invoices, reports, notifications)
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# OpenAI API Key (for advanced AI features)
OPENAI_API_KEY=your-openai-api-key

# Bank API Configuration (for automated bank feed integration)
BANK_API_KEY=your-bank-api-key
BANK_API_URL=https://api.yourbank.com

# Company Settings
COMPANY_NAME=Vaam
CURRENCY=GBP
TAX_RATE=0.20

# Database Settings (optional - defaults to local SQLite)
DATABASE_URL=sqlite:///accounting_agent.db

# Automation Settings
AUTO_SYNC_ENABLED=true
AUTO_PAYROLL_ENABLED=true
AUTO_INVOICING_ENABLED=true
AUTO_REPORTING_ENABLED=true
